{
	"workbench.iconTheme": "material-icon-theme",
	"editor.tabSize": 4,
	"editor.insertSpaces": false,
	"editor.detectIndentation": false,
	"editor.fontFamily": "'FiraCode Nerd Font', 'FiraCode nerd font', 'Fira Code'",
	"editor.fontLigatures": true,
	"editor.formatOnSave": true,
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
		"**/Thumbs.db": true,
		"**/node_modules": true,
		"**/coverage": true,
		"**/*.log": true
	},
	"explorer.excludeGitIgnore": true,
	// Terminal settings
	"terminal.integrated.fontFamily": "'FiraCode Nerd Font Mono', 'FiraCode nerd font'",
	"terminal.integrated.fontSize": 15,
	"terminal.integrated.profiles.linux": {
		"bash": {
			"path": "bash",
			"icon": "terminal-bash"
		},
		"zsh": {
			"path": "zsh",
			"icon": "terminal-powershell"
		},
		"fish": {
			"path": "fish"
		},
		"tmux": {
			"path": "tmux",
			"icon": "terminal-tmux"
		},
		"pwsh": {
			"path": "pwsh",
			"icon": "terminal-powershell"
		}
	},
	"terminal.integrated.profiles.osx": {
		"bash": null,
		"zsh": {
			"path": "zsh",
			"args": [
				"-l"
			],
			"icon": "terminal-powershell"
		},
		"fish": null,
		"tmux": null,
		"pwsh": null
	},
	"terminal.external.linuxExec": "kitty",
	"terminal.external.osxExec": "Kitty.app",
	"workbench.colorCustomizations": {
		"terminal.foreground": "#dbdbdb",
		"terminal.background": "#14191e",
		"terminal.ansiBlack": "#3c456f",
		"terminal.ansiBrightBlack": "#6474b9",
		"terminal.ansiRed": "#db2009",
		"terminal.ansiBrightRed": "#cc5b4d",
		"terminal.ansiGreen": "#fb5700",
		"terminal.ansiBrightGreen": "#ff894b",
		"terminal.ansiYellow": "#ffb500",
		"terminal.ansiBrightYellow": "#ffc538",
		"terminal.ansiBlue": "#ac1c75",
		"terminal.ansiBrightBlue": "#dc2499",
		"terminal.ansiMagenta": "#d441d2",
		"terminal.ansiBrightMagenta": "#dc67db",
		"terminal.ansiCyan": "#9800c7",
		"terminal.ansiBrightCyan": "#c578dd",
		"terminal.ansiWhite": "#cab2ab",
		"terminal.ansiBrightWhite": "#feffff"
	},
	"telemetry.telemetryLevel": "crash",
	// Plugin Settings
	"eslint.enable": false,
	// Language Specific Settings
	"typescript.updateImportsOnFileMove.enabled": "always",
	"javascript.updateImportsOnFileMove.enabled": "always",
	"[vue]": {
		"editor.defaultFormatter": "Vue.volar"
	},
	"[javascript]": {
		"eslint.enable": true,
		"eslint.alwaysShowStatus": true,
		"eslint.format.enable": true,
		"jest.autoRun": {
			"watch": false,
			"onSave": [
				"test-file",
				"test-src-file"
			],
		}
	},
	"[typescript]": {
		"eslint.enable": true,
		"eslint.alwaysShowStatus": true,
		"eslint.format.enable": true,
		"jest.autoRun": {
			"watch": false,
			"onSave": [
				"test-file",
				"test-src-file"
			],
		}
	},
}